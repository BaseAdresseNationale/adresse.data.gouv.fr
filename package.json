{
  "name": "adresse.data.gouv.fr",
  "private": true,
  "version": "1.0.0",
  "description": "Site officiel de la Base Adresse Nationale",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "dev": "node server",
    "build": "next build",
    "start": "NODE_ENV=production node server",
    "test": "jest",
    "lint": "xo",
    "heroku-postbuild": "next build"
  },
  "dependencies": {
    "@etalab/bal": "^0.10.0",
    "@etalab/project-legal": "^0.3.2",
    "@mapbox/mapbox-gl-draw": "^1.0.9",
    "@turf/bbox": "^6.0.1",
    "blob-to-buffer": "^1.2.6",
    "compression": "^1.7.2",
    "content-disposition": "^0.5.2",
    "express": "^4.16.2",
    "hoist-non-react-statics": "^2.5.0",
    "isomorphic-unfetch": "^2.0.0",
    "jschardet-french": "^0.0.1",
    "lodash": "^4.17.5",
    "mapbox-gl": "^0.48.0",
    "marked": "^0.5.1",
    "next": "^6.0.3",
    "papaparse": "^4.3.6",
    "piwik-react-router": "^0.10.0",
    "prop-types": "^15.6.0",
    "react": "^16.4.1",
    "react-autocomplete": "^1.7.2",
    "react-dom": "^16.4.1",
    "react-dropzone": "^4.2.1",
    "react-icons": "^2.2.7",
    "react-mapbox-gl": "^3.8.0",
    "regenerator-runtime": "^0.12.0",
    "underscore.string": "^3.3.4"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.51",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^8.2.6",
    "babel-jest": "^23.4.0",
    "babel-plugin-inline-import": "^3.0.0",
    "babel-plugin-lodash": "^3.3.4",
    "codecov": "^3.0.4",
    "eslint": "^5.1.0",
    "eslint-config-xo-nextjs": "^1.3.0",
    "eslint-plugin-react": "^7.10.0",
    "jest": "^23.4.1",
    "jest-junit": "^5.1.0",
    "lerna-changelog": "^0.8.0",
    "webpack-bundle-analyzer": "^2.13.1",
    "xo": "^0.23.0"
  },
  "jest": {
    "verbose": true,
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "output": "reports/tests/junit.xml"
        }
      ]
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "components/**/*.js",
      "lib/**/*.js",
      "server/**/*.js"
    ],
    "coverageReporters": [
      "lcov",
      "text-summary"
    ]
  },
  "xo": {
    "extends": "xo-nextjs",
    "semicolon": false,
    "space": 2,
    "env": "browser",
    "rules": {
      "camelcase": "warn",
      "unicorn/catch-error-name": "off"
    },
    "overrides": [
      {
        "files": "**/__tests__/**/*.js",
        "env": [
          "browser",
          "jest"
        ]
      }
    ]
  },
  "changelog": {
    "cacheDir": ".changelog",
    "labels": {
      "bug": ":bug: Bug Fix",
      "build": ":building_construction: Build Process",
      "cleanup": ":shower: Cleanup",
      "design": ":rainbow: Design",
      "documentation": ":memo: Documentation",
      "enhancement": ":rocket: Enhancement",
      "performance": ":racehorse: Performance",
      "security": ":policeman: Security"
    },
    "repo": "etalab/adresse.data.gouv.fr"
  }
}
