{
  "name": "adresse.data.gouv.fr",
  "private": true,
  "version": "1.0.0",
  "description": "Site officiel de la Base Adresse Nationale",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start -p $PORT",
    "export": "next export",
    "lint": "xo",
    "deploy": "touch out/.nojekyll && gh-pages -d out -m 'Deploy [skip ci]' --dotfiles=true",
    "heroku-postbuild": "next build"
  },
  "dependencies": {
    "blob-to-buffer": "^1.2.6",
    "debounce": "^1.1.0",
    "jschardet-french": "^0.0.1",
    "leaflet": "^1.2.0",
    "next": "^4.0.0",
    "papaparse": "^4.3.6",
    "piwik-react-router": "^0.10.0",
    "prop-types": "^15.6.0",
    "react": "^16.0.0",
    "react-autocomplete": "^1.7.2",
    "react-dom": "^16.0.0",
    "react-dropzone": "^4.2.1",
    "react-icons": "^2.2.7",
    "react-leaflet": "^1.7.1"
  },
  "devDependencies": {
    "babel-eslint": "^8.0.2",
    "babel-plugin-inline-import": "^2.0.6",
    "eslint-config-xo-react": "^0.14.0",
    "eslint-plugin-react": "^7.4.0",
    "gh-pages": "^1.0.0",
    "webpack-bundle-analyzer": "^2.9.1",
    "xo": "^0.18.2"
  },
  "xo": {
    "extends": "xo-react",
    "semicolon": false,
    "space": 2,
    "envs": [
      "browser"
    ],
    "parser": "babel-eslint",
    "rules": {
      "jsx-quotes": [
        "error",
        "prefer-single"
      ],
      "react/jsx-closing-bracket-location": [
        "error",
        "after-props"
      ],
      "react/jsx-closing-tag-location": "off",
      "react/jsx-first-prop-new-line": "off",
      "react/jsx-max-props-per-line": [
        "warn",
        {
          "maximum": 4,
          "when": "multiline"
        }
      ],
      "react/jsx-tag-spacing": [
        "error",
        {
          "closingSlash": "never",
          "beforeSelfClosing": "always",
          "afterOpening": "never"
        }
      ],
      "react/forbid-component-props": "off",
      "react/react-in-jsx-scope": "off",
      "react/jsx-curly-brace-presence": "off",
      "react/require-default-props": "off",
      "react/jsx-no-bind": "off"
    }
  }
}
